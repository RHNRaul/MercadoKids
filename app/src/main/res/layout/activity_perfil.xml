<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/fondo"
        android:layout_height="match_parent"
        tools:context=".Perfil">

    <TextView
            android:text="PERFIL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/Perfil"
            android:layout_marginEnd="183dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="184dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="27dp"
            android:textSize="52dp"/>
    <TextView
            android:id="@+id/NombrePerfil"
            android:text=""
            android:layout_width="128dp"
            android:layout_height="65dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginBottom="74dp" app:layout_constraintBottom_toTopOf="@+id/button"/>
    <TextView
            android:id="@+id/Bienvenido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenido"
            android:layout_marginTop="11dp" app:layout_constraintTop_toBottomOf="@+id/Perfil"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="176dp"
            android:layout_marginEnd="166dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="11dp" app:layout_constraintBottom_toTopOf="@+id/NombrePerfil"/>
    <Button
            android:text="Direccion"
            android:layout_width="136dp"
            android:layout_height="50dp" android:id="@+id/button"
            android:layout_marginEnd="138dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="138dp"
            android:layout_marginTop="74dp" app:layout_constraintTop_toBottomOf="@+id/NombrePerfil"/>
    <Button
            android:text="Metodo de pago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button2"
            android:layout_marginEnd="135dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="135dp"
            android:layout_marginTop="60dp" app:layout_constraintTop_toBottomOf="@+id/button"/>
    <Button
            android:text="Hijo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button3"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="161dp"
            android:layout_marginEnd="162dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="26dp"
            app:layout_constraintTop_toBottomOf="@+id/button2" android:onClick="CrearHijo"/>
    <Button
            android:text="Cerrar Sesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button4"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="141dp"
            android:layout_marginEnd="142dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="115dp"
            android:layout_marginTop="59dp" app:layout_constraintTop_toBottomOf="@+id/button3"
            android:onClick="CerrarSesion"/>
</androidx.constraintlayout.widget.ConstraintLayout>